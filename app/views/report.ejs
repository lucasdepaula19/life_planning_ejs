<!doctype html>
<html lang="pt-br">

<head>
  <%- include('./partials/head.ejs'); -%>
</head>

<body class="text-center">
  <div class="p-3 mx-auto flex-column">
    <header>
      <%- include('./partials/header.ejs'); -%>
    </header>

    <aside id="optionsInput">
      <button type="button" class="btn btn-outline-info buttonInput" data-toggle="modal" data-target="#revenueModal">Inserir Receita</button>
      <button type="button" class="btn btn-outline-info buttonInput" data-toggle="modal" data-target="#expenseModal">Inserir Despesa</button>
